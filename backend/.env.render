# RENDER DEPLOYMENT CONFIGURATION
# Copy these values to the "Environment" tab in your Render Web Service

# Server Configuration
NODE_ENV=production
# PORT is handled by Render (defaults to 10000), but you can set it if needed.
# PORT=10000

# Database Configuration (Aiven)
DB_HOST=spoken01-mzitohcreatives-d2f2.e.aivencloud.com
DB_PORT=22417
DB_NAME=defaultdb
DB_USER=avnadmin
DB_PASSWORD=YOUR_AIVEN_PASSWORD_HERE
DB_MAX_CONNECTIONS=20
DB_SSL=true

# JWT Configuration
# (These are examples, Render might auto-generate secrets or you can use these)
JWT_SECRET=YOUR_JWT_SECRET_HERE
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=YOUR_REFRESH_SECRET_HERE
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration
# REPLACE THIS with your actual frontend Render URL after you deploy the frontend
CORS_ORIGIN=https://your-frontend-app-name.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (SMTP)
# You need to fill these with your actual email provider details
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@spokenword.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=Spoken Word Of God Ministries <noreply@spokenword.com>

# File Upload (Render uses ephemeral disk, so uploads vanish on restart without persistent disk)
# For production, consider using AWS S3 or similar.
MAX_FILE_SIZE=5242880
  
